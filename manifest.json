{
  "manifest_version": 3,
  "name": "BlackRoad",
  "version": "1.0.0",
  "description": "Quick access to BlackRoad admin dashboard, deployments, and real-time notifications",
  "author": "BlackRoad OS, Inc.",
  "homepage_url": "https://blackroad.io",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "BlackRoad"
  },

  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },

  "options_page": "src/options.html",

  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],

  "host_permissions": [
    "https://api.blackroad.io/*",
    "https://*.blackroad.io/*"
  ],

  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }]
}
